                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <p>@Html.DisplayNameFor(model => model.HouseNumber):</p>
                    </div>
                    <div class="col s6 m6">
                        <p>@Html.DisplayFor(model => model.HouseNumber)</p>
                    </div>
                </div>
