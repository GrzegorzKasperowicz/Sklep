@model Sklep.Data.Model.Order

@{
    ViewData["Title"] = "Summary";
    Layout = "~/Views/Shared/_CartLayout.cshtml";
}

<h5>Dziękujemy za złożenie zamówienia</h5>
<br />
<br />
<div class="row">
    <div class="col s6 m6">
        <ul class="collection">
