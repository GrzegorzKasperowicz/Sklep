@model Sklep.Data.Model.Product
@{
    ViewData["Title"] = "Szczegoly towary";
    Layout = "~/Views/Shared/_ShopLayout.cshtml";
}


<!-- CSS  -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="~/lib/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
<link href="~/lib/materialize/css/materialize.min.css" type="text/css" rel="stylesheet" media="screen,projection" />

<div class="row center-cols center-align">
    <div class="col m6">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
                <img class="activator" src="@Model.Picture">
            </div>
            <div class="card-content">
                <span class="card-title activator grey-text text-darken-4">@Model.Title<i class="material-icons right">more_vert</i></span>
                <p><a href="#">This is a link</a></p>
            </div>
            <div class="card-reveal">
                <span class="card-title grey-text text-darken-2 text-md-center">@Model.Title<i class="material-icons right">more_vert</i></span>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

    <div class="col m6">
        <div class="card">
            <div class="card-content">
                <p>@Model.Description</p>
            </div>
            <div class="card-action">
                <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.IdProduct"><p>Dodaj do koszyka</p></a>
            </div>
        </div>
    </div>
</div>