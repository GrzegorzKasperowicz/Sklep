@model IEnumerable<Sklep.Data.Model.News>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section">
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col s4 m4">
                <div class="row card-container">
                    <div class="card-panel">
                        <p><b>@news.Title</b></p>
                        <a href="@Url.Action("Details","News",new {id=news.IdNews})">
                            <img src="@news.Picture" height="175" width="175">
                        </a>
                        <p>@news.Description</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>